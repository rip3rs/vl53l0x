  "description": "A Node.js library in Typescript for a vl53l0x device",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "deps": "gulp --color depsDevTask",
    "dev": "gulp --color watchTask",
